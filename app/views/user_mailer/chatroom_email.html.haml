%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    :css
      .createadventurebutton {
        background-color: #4CAF50;
        border: none;
        color: white;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 4px 2px;
        cursor: pointer;
        position: absolute;
        width: 120px;
        font-family: 'pproxima_nova_ltthin', sans-serif;
        height: 30px;
      }

      .logostyle {
        color: white;
        background-color: #414141;
        width: 140px;
        text-align: center;
        padding-top: 7.5px;
        padding-bottom: 7.5px;
        z-index: 110;
        font-size: 15px;
        font-family: 'pproxima_nova_ltthin', sans-serif;
      }
      .new_message {
        font-size: 33px;
        font-family: 'pproxima_nova_ltthin', sans-serif;
        text-transform: uppercase;
        position: relative;
        top: 14px;

      }

      .make_contact {
        font-size: 33px;
        font-family: 'pproxima_nova_ltthin', sans-serif;
        text-transform: uppercase;
        position: relative;
        top: 30px;
      }

      .container {
        position: relative;
        left: 50px;
        top: 100px;
        width: 518px;
        background-color: white;
        padding: 10px;
        margin: 10px;
        font-family: 'pproxima_nova_ltthin', sans-serif;
        font-size: 12px;
      }

      .name {
        position: absolute;
        top: -50px;
        font-size: 33px;
        font-family: 'pproxima_nova_ltthin', sans-serif;
        text-transform: uppercase;
      }
      .timeposted {
        position: absolute;
        top: 5px;
        left: 40px;
      }
      .textpart  {
        position: relative;
        width: 300px;
        left: 242px;
        top: -14px;
        margin: 10px;
      }
      .dividingline {
        clear: both;
        float:none;
        display:block;
        position: relative;
        top: 105px;
        left: 2px;
        width: 520px;
        border:none;
        border-top:1px black;
        color: black;
        background-color: black;
        height:1px;
        z-index:99;
      }

      a.singularchat {
        position: relative;
        top: 70px;
        height: 30px;
        width: 520px;
        text-align: center;
        left: -4px;
        padding: 5px 15px;
        -webkit-appearance: none;
        margin: 5px 0;
        display: inline-block;
        border: 1px solid black;
        border-radius: 0px;
        box-sizing: border-box;
        color: black;
        resize: none;
        font-family: 'pproxima_nova_ltthin', sans-serif;
        font-size: 14px;
        background-color: #bee5fb;
        z-index: 100;
      }

       .info {
        position: relative;
        top: 10px;
        width: 518px;
        font-family: 'pproxima_nova_ltthin', sans-serif;
        font-size: 12px;
        color: grey;
       }

  %body
    .logostyle T W I G S
    .dividingline
    .new_message
      GOOD NEWS! #{@user2.first_name} ACCEPTED YOUR OFFER
    .make_contact
      CONTACT #{@user2.first_name}
    .container
      .name
        = @user2.first_name
      from #{@user2.city_of_residence}
      .info
        Mobile: #{@user2.contact_phone}
        %br
        Email: #{@user2.email}
    %a.singularchat{:href => 'https://staging-twigs.herokuapp.com'} SEND MESSAGE
