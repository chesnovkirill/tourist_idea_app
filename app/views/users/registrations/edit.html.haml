.formtochange
  .title
    REQUIRED INFO
    .line
  = form_tag registration_path(resource_name), :method => :put do
    = devise_error_messages!
    /%p
    /  = f.file_field :avatar

    = text_field :user, :first_name, :id => "firstname"
    = text_field :user, :city_of_residence, :id => "cov"
    = text_field :user, :contact_phone, :id => "cp"
    .second_title
      ADDITIONAL INFO
    .linetwo
    = text_field :user, :last_name, :id => "ln"
    .selectbuttonone
      %select.selectpicker{:name => "user[gender]", "data-style" => "btn-new", "data-width" => "120px"}
        %option{:value => "male"} Male
        %option{:value => "female"} Female
    .calendar
      %input#datepicker{:type => "text", :name => "adventure[adventure_date]", :placeholder => "CHOOSE DATE", :start_year => 1900}/
    = text_field :user, :interests, :id => "in"
    %button.save SAVE
