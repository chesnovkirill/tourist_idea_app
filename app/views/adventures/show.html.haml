.adventurelist
  = link_to 'Back to adventure list', adventures_path(@adventure.id)
  .singularadventure.singularadventureontoggle
    .editdeletecoverremoved.editdeletecover
    .avatar
    - if @adventure.user.avatar_url.to_s != ''
      %a.img.ui.circular.avatar.image{:href => user_path(@adventure.user.id)}
        %img{:src => @adventure.user.avatar_url.to_s}/
    - else
      %a.img.ui.circular.avatar.image{:href => user_path(@adventure.user.id)}
        = image_tag "logos/user.png"
    .descriptionsecondary
      #{link_to "#{@adventure.user.first_name}", user_path(@adventure.user.id)} from #{@adventure.user.city_of_residence} posted #{time_ago_in_words(@adventure.created_at)} ago
      %p needs #{@adventure.action_adventure} in #{@adventure.city},  #{@adventure.country} on #{@adventure.adventure_date.strftime("%B %d, %Y")}:
    .adventureprice
      - if @adventure.price != 0
        $#{@adventure.price}
      - else
        FREE
    .editdelete
      - if user_signed_in? && @adventure.completed != true
        - if @adventure.user.id == current_user.id
          #{link_to "EDIT", edit_adventure_path(@adventure)}
          #{link_to "DELETE", adventure_path(@adventure), :method => :delete}

    .descriptionpart
      #{@adventure.description}
    - if @adventure.details != ""
      .initiallyHiddenBlock
        #{@adventure.details}
      .showHiddenBlock
        %i.angle.down.icon
      .detailslineone
      .detailslinetwo
    .showHiddenBlock3
      = image_tag "logos/dots.png", width: '30px'
    - if @adventure.details != ""
      .showHiddenBlock2
        Other Answers(#{@adventure.comments.count})
    - else
      .noanswers
        Other Answers(#{@adventure.comments.count})
    .initiallyHiddenBlock2
      - @adventure.comments.each do |c|
        = render c
    - if user_signed_in?
      - if @adventure.user.id != current_user.id && @adventure.comments.find_by(:user_id =>current_user.id) == nil && @adventure.completed != true
        - if @adventure.details != ""
          .showHiddenBlock4
            ANSWER
        - else
          .nodetails
            ANSWER
        .initiallyHiddenBlock4
          - if @adventure.details != ""
            .iftherearedetails
              .answerline
              .answeravatar
                - if current_user.avatar_url.to_s != ''
                  %a.img.ui.circular.avatar.image{:href => user_path(current_user.id)}
                    %img{:src => current_user.avatar_url.to_s}/
                - else
                  %a.img.ui.circular.avatar.image{:href => user_path(current_user.id)}
                    = image_tag "logos/user.png"
              = form_for([@adventure,@adventure.comments.build]) do |f|
                %p
                  = text_area :comment, :body, :id => "advisetext"
                  %button.createcomment
                    POST
          - else
            .answerline
            .answeravatar
              - if current_user.avatar_url.to_s != ''
                %a.img.ui.circular.avatar.image{:href => user_path(current_user.id)}
                  %img{:src => current_user.avatar_url.to_s}/
              - else
                %a.img.ui.circular.avatar.image{:href => user_path(current_user.id)}
                  = image_tag "logos/user.png"
            = form_for([@adventure,@adventure.comments.build]) do |f|
              %p
                = text_area :comment, :body, :id => "advisetext"
                %button.createcomment
                  POST