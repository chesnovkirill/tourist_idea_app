%h1 All Adventures
%script{:src => "https://code.jquery.com/jquery-3.1.1.min.js"}
%link{:href => "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.css", :rel => "stylesheet"}/
%script{:src => "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.js"}
%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
%meta{:charset => "UTF-8"}/
= link_to '<i class="big add square icon"></i>'.html_safe, new_adventure_path

%table#adventures
  %thread
    %tr
      %th Number of People
      %th Country
      %th City
      %th Description
      %th Details
      %th Scheduled for
      %th Price
  %tbody
    - @adventures.each do |adventure|
      %tr
        %td= adventure.number_of_people
        %td= adventure.country
        %td= adventure.city
        %td= adventure.description
        %td= adventure.details
        %td= adventure.adventure_date.strftime("%B %d, %Y")
        %td= number_to_currency(adventure.price)
        %td= link_to "Details", adventure_path(adventure)

 
