.mytwigs
  MY TWIGS
.titleline
.box
  .line
    .little_box2
      Date
    .little_box2
      Form
    .little_box2
      Amount
    .little_box2
      Inviter
    .little_box2
      Earned
    .little_box2
      Rating
    .little_box2
      Status
    .little_box2
      Details


  - @adventures.sort {|a,b| b.created_at <=> a.created_at }.each do |twig|
    .line_two
      .little_box
        = local_time(twig.created_at, format: '%m/%e/%Y')
      .little_box
        - if twig.conducted_by == current_user.id
          gave #{twig.action_adventure}
        -else
          asked #{twig.action_adventure}
      .little_box
        = twig.price
      .little_box
        - if !twig.completed
          still pending
        - else
          -if !twig.inviter
            -if current_user.id == twig.user.id
              N/A
            -else
              = link_to("Add inviter", edit_adventure_path(twig))
          - else
            - if twig.inviter == 0
              N/A
            - else
              = link_to(User.find(twig.inviter).first_name, user_path(twig.inviter))
      .little_box
        - if !twig.completed
          Still Pending
        -else
          -if twig.user.id == current_user.id
            - #{twig.price}
          -else
            #{twig.earned}
      .little_box
        - if !twig.completed
          Still Pending
        -else
          -if twig.rating
            = twig.rating
          -else
            -if twig.user.id == current_user.id
              %td= link_to("Rate", edit_adventure_path(twig))
            -else
              %td Awaiting for rating
      .little_box
        -if twig.paid
          Paid
        -else
          Not Paid
      .little_box
        = link_to('View', adventure_path(twig))




