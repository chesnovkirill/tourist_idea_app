.card
  .card-block
    .row
      .col-md-1
        %a.img.ui.avatar.image{:href => user_path(message.user.id)}
          %img{:src => message.user.avatar_url.to_s}/
      .col-md-11
        %p.card-text
          %span.text-muted
            = message.user.first_name
            at #{message.timestamp} says
          %br/
          = message.body

