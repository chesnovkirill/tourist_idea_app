  %head
    %title TWIGS
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %body
      .background
        %a.logostyle{:href => adventures_path} T W I G S
        - if user_signed_in?
          %a.messages{:href => chat_rooms_path} Messages
          .dropdown
            %button#menu1.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
              %img{:src => "/assets/logos/user.png", :width => "30",}/
            #drpdwn.dropdown-menu.ooo{"aria-labelledby" => "dropdownMenuButton"}
              %a.dropdown-item.some{:href => user_path(current_user.id)} My Profile
              %a.dropdown-item.some{:href => edit_user_registration_path} Edit Profile
              - if current_user.admin
                %a.dropdown-item.some{:href => users_path} User List
              %a.dropdown-item.some{:href => mytwigs_adventures_path} My Twigs
              %a.dropdown-item.some{:href => destroy_user_session_path, :method => :get} Log Out
        - else
          %a.sup{:href => new_registration_path(resource_name)} Sign up
          .dropdown
            .lin#menu2.dropdown-toggle{"data-toggle" => "dropdown", :href => new_user_session_path} Login
            .dropdown-menu.aaa{"aria-labelledby" => "dropdownMenuButton"}
              .dropdown-item.one
                = form_tag session_path(:user) do
                  = text_field :user, :email, :id => "useremail"
                  = password_field :user, :password
                  %p
                  = check_box :user, :remember_me
                  = label_tag 'user[remember_me]', 'Remember me'
                  %p
                  %button Sign in
                  = link_to "Forgot your password?", new_password_path(:user)




    -# this goes just inside %body:
    - if flash[:notice]
      #notice.message= flash[:notice]
    - elsif flash[:warning]
      #warning.message= flash[:warning]
    = yield
