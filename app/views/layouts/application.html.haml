!!! 5
%html
  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %meta{:charset => "utf-8"}/
  %script{:src => "https://code.jquery.com/jquery-3.1.1.min.js"}
  %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :rel => "stylesheet"}/
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"}
  %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"}

  %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.css", :rel => "stylesheet"}/
  %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", :rel => "stylesheet"}/

  %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.js"}

 

  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %meta{:charset => "UTF-8"}/
  = javascript_include_tag :defaults

  :css
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
        height: 70px;
    }

    li {
        float: left;
    }

    li a {
        font-family: Futura, "Trebuchet MS", Arial, sans-serif;
        display: block;
        color: white;
        text-align: center;
        padding: 24px 16px;
        text-decoration: none;
    }
    .spetialcase {
        font-family: Futura, "Trebuchet MS", Arial, sans-serif;
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover {
        background-color: #111;
    }

    lo {
        float: right;
    }

    .container-1 .styled{
        font-family: Futura, "Trebuchet MS", Arial, sans-serif;
        position: relative;
        top: 15px;
        right: 20px;
        width: 300px;
        height: 40px;
        background: #325C74;
        border: none;
        font-size: 12pt;
        float: left;
        color: #e7e7e7;
        padding-left: 40px;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 4px;
    }

    .container-1 .styled:hover, .container-1 .styled:focus, .container-1 .styled:active{
        outline:none;
        background-color: #e7e7e7;
        color: #325C74;
    }

    i.fa.fa-search {
        position: relative;
        left: 100px;
        z-index: 1;
    }

    .inline {
        display: inline;
    }

    .button4 {
        position: relative;
        top: 15px;
        right: 20px;
        font-family: Futura, "Trebuchet MS", Arial, sans-serif;
        background: #325C74;
        color: #e7e7e7;
        border: none;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
        height: 40px;
        width: 70px;
    }

    .button4:hover {
        background-color: #e7e7e7;
        color: #325C74;
    }

    i.search.icon {
       color: #e7e7e7;
       position: relative;
       top: 25px;
       left: 10px;
       z-index: 1;
    }

    .logostyle {
        position: relative;
        top: -20px;
    }

  %head
    %title ExperienceMaker!
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %body
      %ul
        %li
          = link_to root_path do
            .logostyle
              = image_tag "logos/t.png", width: '90px'
        - if user_signed_in?
          %li
            %a{:href => user_path(current_user.id)} My Profile
          %li
            %a{:href => chat_rooms_path} Messages
          %li
            %a{:href => destroy_user_session_path, :method => :get} Log Out
          - if current_user.admin
            %li
              %a{:href => users_path} User List
        - else
          %ul
            %li
              %a{:href => new_registration_path(resource_name)} Sign up
            %li
              %a{:href => new_user_session_path} Login
        - if @search
          %lo
            = search_form_for @search do |f|
              .box
                .container-1
                  .inline
                    = f.text_field :city_cont, :placeholder => 'Find Adventures in any City', class: 'styled'
                  .inline
                    %button.button.button4 Search

          %lo
            %i.search.icon



    -# this goes just inside %body:
    - if flash[:notice]
      #notice.message= flash[:notice]
    - elsif flash[:warning]
      #warning.message= flash[:warning]
    = yield
