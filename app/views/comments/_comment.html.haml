.ui.centered.grid
  .five.wide.column
    %h2
      #{comment.user.first_name}
    %p
      = comment.body
    %p
      #{comment.user.first_name}'s capabilities:
      #{comment.user.capabilities}
      = comment.capabilities
    %p
    #{comment.user.first_name}'s price:
    = comment.price
